<%= form_for(@bibliography, :html => {:multipart => true}) do |f| %>
    <% if @bibliography.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@bibliography.errors.count, "error") %> prohibited this bibliography from being saved:</h2>

          <ul>
            <% @bibliography.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :year %><br>
      <%= f.text_field :year, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :author %><br>
      <%= f.text_field :author, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :pages %><br>
      <%= f.text_field :pages, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :thickness %><br>
      <%= f.text_field :thickness, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :amazon_afiliate_link %><br>
      <%= f.text_field :amazon_afiliate_link, class: 'form-control' %>
    </div>

    <div>
      <%= f.label :image %><br>
      <%= f.file_field :image %> <br>

      <div>
        <%= image_tag @bibliography.image_url(:thumb), class: 'img-responsive', alt: @bibliography.title if @bibliography.image? %>
      </div>

    </div>

    <div class="actions">
      <br>
      <%= f.submit 'Cadastrar', class: 'btn flat-button remove-border blue-button white-font-color' %>
    </div>
<% end %>
