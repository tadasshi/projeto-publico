<div class="container" itemscope="http://schema.org/Product">

  <p id="notice"><%= notice %></p>

  <% breadcrumb :bibliography, @bibliography %>
  <%= breadcrumbs pretext: 'Você está aqui: ', separator: ' &rsaquo; ', semantic: true %>
  <div itemscope itemtype="http://schema.org/Book">

    <div class="col-md-4" itemprop='image' itemtype="https://schema.org/ImageObject">
      <img itemprop="contentUrl" class='img-responsive img-thumbnail' alt='<%= @bibliography.title %>' title='<%= @bibliography.title %>' src='<%= @bibliography.image %>'/>
    </div>

    <div class="col-md-8">

      <a itemprop="url" href="<%= "http://#{request.host + url_for(:page => params[:page]) }" %>">
        <div itemprop="name">
          <h1><%= @bibliography.title %></h1>
        </div>
      </a>

      <p itemprop="description">
        <%= simple_format @bibliography.description %>
      </p>

      <p>
        <%= @bibliography.year %>
      </p>
      <div itemprop="author" itemscope itemtype="http://schema.org/Person">
        Escrito por: <span itemprop="name"><%= @bibliography.author %></span>
      </div>
      <div>
        <meta itemprop="numberOfPages" content="27">
        Número de Páginas: <%= @bibliography.pages %> páginas
      </div>
      <p>
        <%= @bibliography.thickness %>
      </p>

      <% if @bibliography.amazon_afiliate_link != '' %>
          <div class="pull-right">
            <small>Compre aqui.</small>
            <br/>
            <%= link_to image_tag('amazon-button.png', :alt => 'Amazon Link', :style => 'height: 42px;'), @bibliography.amazon_afiliate_link, target: '_blank' %>
            <img src="http://ir-na.amazon-adsystem.com/e/ir?t=mapn-20&l=as2&o=1&a=8532304710" width="1" height="1" border="0" alt="" style="border:none !important; margin:0px !important;"/>
          </div>
      <% end %>
    </div>
  </div>
</div>