  <head>

    <meta name="robots" content="index,follow"/>
    <%= display_meta_tags %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= favicon_link_tag 'icon/apple-icon-57x57.png', rel: 'apple-touch-icon', sizes: '57x57' %>
    <%= favicon_link_tag 'icon/apple-icon-60x60.png', rel: 'apple-touch-icon', sizes: '60x60' %>
    <%= favicon_link_tag 'icon/apple-icon-72x72.png', rel: 'apple-touch-icon', sizes: '72x72' %>
    <%= favicon_link_tag 'icon/apple-icon-114x114.png', rel: 'apple-touch-icon', sizes: '114x114' %>
    <%= favicon_link_tag 'icon/apple-icon-120x120.png', rel: 'apple-touch-icon', sizes: '120x120' %>
    <%= favicon_link_tag 'icon/apple-icon-144x144.png', rel: 'apple-touch-icon', sizes: '144x144' %>
    <%= favicon_link_tag 'icon/apple-icon-152x152.png', rel: 'apple-touch-icon', sizes: '152x152' %>
    <%= favicon_link_tag 'icon/apple-icon-180x180.png', rel: 'apple-touch-icon', sizes: '180x180' %>
    <%= favicon_link_tag 'icon/android-icon-192x192.png', rel: 'icon', sizes: '192x192', type: 'image/png' %>
    <%= favicon_link_tag 'icon/favicon-32x32.png', rel: 'icon', sizes: '32x32', type: 'image/png' %>
    <%= favicon_link_tag 'icon/favicon-96x96.png', rel: 'icon', sizes: '96x96', type: 'image/png' %>
    <%= favicon_link_tag 'icon/favicon-16x16.png', rel: 'icon', sizes: '16x16', type: 'image/png' %>
    <%= favicon_link_tag 'icon/manifest.json', rel: 'manifest' %>
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="assets/icon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <link rel="canonical" href="<%= "http://#{request.host + url_for(:page => params[:page]) }" %>">
    <link rel="publisher" href="http://google.com/+Masteringpnl_channel"/>
    <%= auto_discovery_link_tag(:rss, feed_url, {title: 'Mastering PNL - RSS'}) %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>

  </head>

  <body itemscope itemtype="http://schema.org/WebPage">
    <header class="header">
      <nav class="navbar-inverse navbar-fixed-top navbar">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag('logo.png', :alt => 'Logo', :style => 'height: 42px;'), root_path, class: 'navbar-brand' %>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Metaforas', metaphors_path %></li>
              <li><%= link_to 'Bibliografias', bibliographies_path %></li>
              <li><%= link_to 'Ebooks', ebooks_path %></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </header>
    <section ng-app="masteringpnl" style="padding-top: 50px">

      <%= yield %>

    </section>

    <footer class="footer">
      <div class="container" style="margin-bottom: 20px">

        <div class="col-md-4">
          <h3>Site</h3>
          <%= link_to 'Página Inicial', root_path %> <br>
          <%= link_to 'Sobre', sobre_nos_path %> <br>
          <%= link_to 'Contato', contato_path %> <br>
        </div>

        <div class="col-md-4">
          <h3>Conteúdos</h3>
          <%= link_to 'Metaforas', metaphors_path %> <br>
          <%= link_to 'Bibliografias', bibliographies_path %> <br>
          <%= link_to 'Ebooks', ebooks_path %> <br>
        </div>

        <div class="col-md-4 text-right">
          <h3 class="">Midias Sociais</h3>
          <p class="footer-social-network">
            <%= link_to image_tag('icon/social/128-facebook.png', :alt => 'facebook'), facebook_path, target: '_blank' %>
            <%#= link_to image_tag('icon/social/128-blogger.png', :alt => 'blogger'), '', target: '_blank' %>
            <%= link_to image_tag('icon/social/128-googleplus.png', :alt => 'googleplus'), googleplus_path, target: '_blank', rel: 'publisher' %>
            <%#= link_to image_tag('icon/social/128-instagram.png', :alt => 'instagram'), '', target: '_blank' %>
            <%= link_to image_tag('icon/social/128-rss.png', :alt => 'rss'), feed_path, target: '_blank' %>
            <%= link_to image_tag('icon/social/128-twitter.png', :alt => 'twitter'), twitter_path, target: '_blank' %>
            <%= link_to image_tag('icon/social/128-youtube-2.png', :alt => 'youtube'), youtube_path, target: '_blank' %>
          </p>
        </div>

      </div>

      <div style="padding: 8px 0px;">
        <div class="container">

          <div class="col-md-4">
            <small class="pull-left">&copy; Copyright <%= Time.now.year %> - Todos direitos reservados</small>
          </div>

          <div class="col-md-4"></div>

          <div class="col-md-4">
            <small class="pull-right">
              Desenvolvidor por
              <%= link_to 'Thiago Tadashi', thiagotadashi_path, target: '_blank', :rel => 'nofollow' %>
            </small>
          </div>

        </div>
      </div>
    </footer>

    <%= javascript_include_tag 'application' %>

    <script>
      (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function () {
              (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date();
        a = s.createElement(o),
            m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
      })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-27929345-12', 'auto');
      ga('send', 'pageview');

    </script>

  </body>
</html>
