<%= form_for(@ebook, :html => {:multipart => true}) do |f| %>

    <% if @ebook.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@ebook.errors.count, "error") %> prohibited this ebook from being saved:</h2>

          <ul>
            <% @ebook.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :value %><br>
      <%= f.text_field :value, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :url %><br>
      <%= f.text_field :url, class: 'form-control' %>
    </div>

    <div>
      <%= f.label :image %><br>
      <%= f.file_field :image %> <br>
      <div>
        <%= image_tag @ebook.image_url(:thumb), class: 'img-responsive', alt: @ebook.title if @ebook.image? %>
      </div>
    </div>

    <div class="btn-group">
      <br>
      <%= f.submit 'Cadastrar', class: 'btn flat-button remove-border blue-button white-font-color' %>
    </div>
<% end %>
