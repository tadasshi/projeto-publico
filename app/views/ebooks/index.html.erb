<div class="container">

  <% breadcrumb :ebooks, @ebooks %>
  <%= breadcrumbs pretext: 'Você está aqui: ', separator: ' &rsaquo; ', semantic: true %>

  <p id="notice"><%= notice %></p>

  <h2>Listing Ebooks</h2>

  <div class="row">
    <%= form_tag(ebooks_path, method: 'get', class: 'navbar-form navbar-right', role: 'search', id: 'nav-search') do %>
        <div class="form-group">
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: 'form-control no-radius no-border', placeholder: 'busco por...' %>
            <span class="input-group-btn">
            <button class="btn btn-default no-radius no-border" type="submit">
              <i class="glyphicon glyphicon-search" style="font-size: 15px" aria-hidden="true"></i>
            </button>
          </span>
          </div><!-- /input-group -->
        </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
      <%= link_to 'New Ebook', new_ebook_path %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
        <th>Value</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ebooks.each do |ebook| %>
          <tr>
            <td><%= ebook.title %></td>
            <td><%= ebook.description %></td>
            <td><%= ebook.image %></td>
            <td><%= ebook.value %></td>
            <td><%= link_to 'Show', ebook %></td>

            <% if user_signed_in? %>
                <td><%= link_to 'Edit', edit_ebook_path(ebook) %></td>
                <td><%= link_to 'Destroy', ebook, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>
          </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <%= paginate @ebooks %>
  </div>
</div>